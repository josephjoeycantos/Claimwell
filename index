  <script>
    // Year
    document.getElementById('yr').textContent = new Date().getFullYear();

    // Calculator
    function num(v){ return isNaN(parseFloat(v)) ? 0 : parseFloat(v); }
    function calcSavings(){
      const charges = num(document.getElementById('charges').value);
      const collectRate = num(document.getElementById('collectRate').value)/100; // current %
      const inhouse = num(document.getElementById('inhouseCost').value);
      const fee = num(document.getElementById('cwFee').value)/100;

      if (charges<=0 || collectRate<=0 || fee<=0){
        document.getElementById('calcOut').innerHTML = '<div class="mini">Please enter valid numbers.</div>'; return;
      }
      const currentCollections = charges * collectRate;
      const cwCollections = charges * Math.min(1, collectRate + 0.06); // assume potential +6% lift cap
      const cwFeeCost = cwCollections * fee;
      const netNow = currentCollections - inhouse;
      const netCW = cwCollections - cwFeeCost;
      const delta = netCW - netNow;

      document.getElementById('calcOut').innerHTML = `
        <div><b>Current net</b>: $${netNow.toLocaleString()} / mo</div>
        <div><b>With ClaimWell (est.)</b>: $${netCW.toLocaleString()} / mo</div>
        <div style="margin-top:6px"><span class="${delta>=0?'tick':'warn'}">●</span>
          ${delta>=0 ? 'Estimated monthly improvement' : 'Estimated shortfall'}: <b>$${Math.abs(delta).toLocaleString()}</b>
        </div>
        <div class="mini" style="margin-top:6px">Estimates only. Exact results depend on payer mix, contracts, and documentation quality.</div>
      `;
    }

    // Contact (no backend yet)
    function submitContact(e){
      e.preventDefault();
      alert('Thanks! We will reach out shortly)');
      e.target.reset();
    }
  </script>

